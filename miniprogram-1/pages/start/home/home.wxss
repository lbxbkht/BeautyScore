.btn-box{
  display: flex;
  justify-content: space-around;
  position: absolute;
  bottom: 50px;
  width: 100%;
  opacity: 0.7;
}

.btn-box cover-image{
  width: 50px;
  height: 50px;
}

.reChoose{
  position: fixed;
  bottom:30px;
  left:50%;
  transform: translateX(-50%);
  box-shadow: 0px 1px 5px #666;
  opacity: 0.5;
}

.faceinfo_box{
position: absolute;
left:50%;
top:50%;
transform: translate(-50%,-50%);
width: 80%;
height:200px;
background-color: rgba(255, 255, 255, 0.7);
border-radius: 5px;
box-shadow: 0px 1px 5px #eee;
display: flex;
flex-direction: column;
justify-content: space-around;
}

.face_row{
display: flex;
justify-content: space-around;
font-size: 13px;
}